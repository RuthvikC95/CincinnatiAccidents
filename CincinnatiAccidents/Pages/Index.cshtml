@page
@model IndexModel
@{
    ViewData["Title"] = "Cincinnati Accidents Portal";
}
<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<body>
    <div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://live.staticflickr.com/4893/44412530280_d7b57e519e_b.jpg" alt="cincy_img1" width="800" />
                </div>
                <div class="item">
                    <img src="https://www.jackrouse.com/wp-content/uploads/Cincinnati-River.jpg" alt="cincy_img2" width="800" />
                </div>
                <div class="item">
                    <img src="https://i.pinimg.com/originals/71/05/cc/7105cc096dc340d18128d00a94493d85.jpg" alt="cincy_img2" width="800" />
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div><hr />
    </div>
        <div class="text">
            This Website is on the Traffic and Fire Accidents in the city of Cincinnati,
            clubbed together based on the locations and neighborhood. Our goal is to make the data simple to use, easy to understand, and effortless to access.
            No data or tech knowledge is required! Start exploring this website of ours! <em><a href="https://localhost:44325/summary">Click here</a> to see the the Summary of the accidents reported </em>
        </div>
</body>